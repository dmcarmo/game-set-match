<div class="container">
  <%= simple_form_for(@group) do |form| %>
    <%= form.input :name, label: "Group Name", required: true, input_html: { class: 'form-control' } %>

    <div class="form-group">
      <%= form.button :submit, class: 'btn btn-primary' %>
      <%= link_to 'Cancel', groups_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
